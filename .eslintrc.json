{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true,
        "mocha": true
    },
    "extends": ["eslint:recommended", "plugin:wdio/recommended"],
    "plugins": ["wdio"],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
