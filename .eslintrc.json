{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": [
        "wdio"
    ],
    "extends": "plugin:wdio/recommended",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
